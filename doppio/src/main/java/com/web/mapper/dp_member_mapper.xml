<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="mapper.member">

	<!-- 회원가입 -->
	<insert id="insert" parameterType="com.web.vo.DpMemberVO">
		insert into doppio_member values('m_'||sequ_doppio_member_mnum.nextval,#{id},#{pass},#{name},#{hp},#{address},#{email},sysdate,'n')
	</insert>
	
	<!-- 회원 가입시 아이디 중복 체크 -->
	<select id="id_check" parameterType="java.lang.String" resultType="int">
	  select count(*) from doppio_member where id=#{id}
	</select>
	
	<!-- 로그인 -->
	<select id="login" parameterType="com.web.vo.DpMemberVO" resultType="int">
		select count(*) from doppio_member where id=#{id} and pass=#{pass}
	</select>

</mapper>